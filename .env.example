# OSS Radar — Environment Variables Reference
# Copy this file to .env and fill in your values
# All vars are prefixed RADAR_ and read by Pydantic BaseSettings

# ── Storage ────────────────────────────────────────────────────────────────
# Default: ~/.radar/catalog.db
RADAR_DB_PATH=~/.radar/catalog.db

# ── Reddit (optional) ──────────────────────────────────────────────────────
# Set RADAR_REDDIT_ENABLED=true and provide credentials to enable
RADAR_REDDIT_ENABLED=false
RADAR_REDDIT_CLIENT_ID=
RADAR_REDDIT_CLIENT_SECRET=
RADAR_REDDIT_USER_AGENT=oss-radar/1.0
# Comma-separated list of subreddits to scrape
RADAR_REDDIT_SUBREDDITS=opensource,programming,devops,Python,rust,golang

# ── Email / SMTP ────────────────────────────────────────────────────────────
# Set RADAR_EMAIL_ENABLED=true to send daily/weekly reports
RADAR_EMAIL_ENABLED=false
RADAR_SMTP_HOST=smtp.gmail.com
RADAR_SMTP_PORT=587
RADAR_SMTP_USER=your-email@gmail.com
RADAR_SMTP_PASSWORD=your-app-password
RADAR_SMTP_USE_TLS=true
RADAR_EMAIL_FROM=OSS Radar <your-email@gmail.com>
# Comma-separated recipient list (uncomment and edit when ready)
RADAR_EMAIL_TO=recipient@example.com
# Single recipient alias (alternative to EMAIL_TO)
RADAR_TO_EMAIL=

# ── Scoring Weights (must sum to 1.0) ────────────────────────────────────
RADAR_INFLUENCE_WEIGHT=0.4
RADAR_ENGAGEMENT_WEIGHT=0.6
RADAR_MAINTAINER_BOOST_VALUE=1.5
RADAR_SENTIMENT_VADER_WEIGHT=0.6
RADAR_SENTIMENT_TEXTBLOB_WEIGHT=0.4

# ── HTTP / Scraping ─────────────────────────────────────────────────────────
RADAR_REQUEST_TIMEOUT=10
RADAR_MAX_RETRIES=3
RADAR_RETRY_MIN_WAIT=2.0
RADAR_RETRY_MAX_WAIT=30.0

# ── Report Settings ────────────────────────────────────────────────────────
# Number of posts per daily report
RADAR_REPORT_SIZE=5
# Number of posts in weekly digest
RADAR_WEEKLY_REPORT_SIZE=10
# Hours within which a duplicate daily run is blocked (10 = safe for 2x/day)
RADAR_DUPLICATE_RUN_HOURS=10

# ── Scheduling ─────────────────────────────────────────────────────────────
# Scrape hourly (collect posts into catalog, no email)
RADAR_SCRAPE_CRON=0 * * * *
# Daily email report (once per day at 6 AM PST = 14:00 UTC)
RADAR_DAILY_CRON=0 14 * * *
# Weekly digest (Friday 12 PM PST = 20:00 UTC)
RADAR_WEEKLY_CRON=0 20 * * 5

# ── LLM Summarization (opt-in) ────────────────────────────────────────────
# Requires `gh` CLI or Amplifier installed
RADAR_LLM_ENABLED=false
# Model for pain-point summaries (GitHub Models or Amplifier)
RADAR_LLM_MODEL=claude-sonnet-4.6

# ── Logging ────────────────────────────────────────────────────────────────
RADAR_LOG_LEVEL=INFO
# Set to true in CI for JSON log output
RADAR_LOG_JSON=false
